@{
    Layout = "_Layout";
}

@model University.Models.Course

<h2>Course Details</h2>
<hr/>
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<hr />

@if (@Model.Students.Count == 0)
{
    <p>This course doesn't have and students enrolled yet</p>
}
else
{
    <h4>Students enrolled in this course</h4>
    <ul>
        @foreach (var join in Model.Students)
        
        {
            <li>@join.Student.Name</li>
        }
    </ul>
}

<p>@Html.ActionLink("Go back to home", "Index", "Home")</p>
<p>@Html.ActionLink("Go back to list of courses", "Index")</p>