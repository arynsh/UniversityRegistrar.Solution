@using University.Models;
@{
    Layout = "_Layout";
}

@* @model List<University.Models.Student>; *@
<h4>Courses</h4>

@if (Model.Count == 0)
{
    <h3>No courses have been added yet.</h3>
}
<ul>
    @foreach (Course course in Model)
    {
        <li>
        @Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId})
        </li>
    }
</ul>

<p>@Html.ActionLink("Add a new course", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>