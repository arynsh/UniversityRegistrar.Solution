@{
    Layout= "_Layout";
}

@model University.Models.Student

<h3>Add a new student</h3>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.Label("Select Course")
    @Html.DropDownList("CourseId") 

    @Html.LabelFor(model => model.DateOfEnroll)
    @Html.EditorFor(model => model.DateOfEnroll, new { @type = "date" })

    <input type= "submit" value="Add New Student" class="btn btn-primary"/>
}
<p>@Html.ActionLink("Show all students", "Index")</p>